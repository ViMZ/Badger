<nav class="Header-nav">
	<div class="flex flex-wrap justify-between items-center m-0">
		<a href="{{ path('home') }}" class="Header-logo">
			<img src="{{ asset('build/images/badger-icon.png') }}" class="Header-logo-icon" alt="Badger Logo"/>
			<span class="Header-logo-text">Badger</span>
		</a>
		<div class="flex items-center md:order-2">
			<button type="button" class="Header-menu-item" id="user-menu-button" aria-expanded="false" data-dropdown-toggle="dropdown">
				{{app.user.name}}
			</button>

			{% include "user_dropdown.html.twig" %}

			<button data-collapse-toggle="mobile-menu-2" type="button" class="inline-flex items-center p-2 ml-1 text-sm rounded-lg md:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600" aria-controls="mobile-menu-2" aria-expanded="false">
				<span class="sr-only">Ouvrir le menu</span>
				<svg class="w-6 h-6" fill="currentColor" viewbox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
					<path fill-rule="evenodd" d="M3 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 15a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"></path>
				</svg>
				<svg class="hidden w-6 h-6" fill="currentColor" viewbox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
					<path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
				</svg>
			</button>
		</div>
		<ul class="Header-menu" id="mobile-menu-2">
			{% for entry in context.menu.entries %}
				{% if app.request.attributes.get('_route') is same as(entry.route) %}
					<li>
						<a class="Header-menu-item Header-menu-item--active" href="{{ path(entry.route) }}" aria-current="page">{{entry.name}}</a>
					</li>
				{% else %}
					<li>
						<a class="Header-menu-item" href="{{ path(entry.route) }}">{{entry.name}}</a>
					</li>
				{% endif %}
			{% endfor %}
			{% if is_granted('ROLE_ALLOWED_TO_SWITCH') %}
				<li>
					<a class="Header-menu-item" href="?_switch_user=user@email.com">Switch</a>
				</li>
			{% endif %}
		</ul>
	</div>
</nav>
