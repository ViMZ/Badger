<nav class="
	px-2 sm:px-4 py-0
	border-b-2
	border-white
	border-opacity-30
	shadow-md
	bg-white
	"
	>
	<div class="flex flex-wrap justify-between items-center m-0">
		<a href="{{ path('home') }}" class="flex items-center py-3 px-2 transition-all rounded-lg hover:bg-emerald-500 hover:bg-opacity-20">
			<img src="{{ asset('build/images/badger_PNG43.png') }}" class="mr-3 h-6 sm:h-10 fill-white" alt="Badger Logo"/>
			<span class="self-center text-xl font-semibold whitespace-nowrap text-black">Badger</span>
		</a>
		<div class="flex items-center md:order-2">
			<button type="button" class="flex mr-3 text-sm bg-gray-800 rounded-full md:mr-0 focus:ring-4 focus:ring-gray-300 dark:focus:ring-gray-600" id="user-menu-button" aria-expanded="false" data-dropdown-toggle="dropdown">
				<span class="sr-only">Ouvrir le menu utilisateur</span>
				{% if app.user.image is not defined %}
					<div class="w-12 h-12 rounded-full flex justify-center items-center text-4xl">
						<i class="fa-solid fa-user-astronaut text-amber-50 w-100"></i>
					</div>
				{% else %}
					<img src="{{user.image}}" alt="Image de l'utilisateur">
				{% endif %}
			</button>

			{% include "user_dropdown.html.twig" %}

			<button data-collapse-toggle="mobile-menu-2" type="button" class="inline-flex items-center p-2 ml-1 text-sm rounded-lg md:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600" aria-controls="mobile-menu-2" aria-expanded="false">
				<span class="sr-only">Ouvrir le menu</span>
				<svg class="w-6 h-6" fill="currentColor" viewbox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
					<path fill-rule="evenodd" d="M3 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 15a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"></path>
				</svg>
				<svg class="hidden w-6 h-6" fill="currentColor" viewbox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
					<path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
				</svg>
			</button>
		</div>
		<div class="hidden w-full md:flex md:w-auto md:order-1" id="mobile-menu-2">
			<ul class="flex flex-col align-baseline mt-4 md:flex-row md:space-x-8 md:mt-0 md:text-md md:font-bold">
				{% for entry in context.menu.entries %}
					{% if app.request.attributes.get('_route') is same as(entry.route) %}
						<li>
							<a href="{{ path(entry.route) }}" class="block my-5 py-2 pr-4 pl-3 transition-all rounded-lg bg-emerald-300" aria-current="page">{{entry.name}}</a>
						</li>
					{% else %}
						<li>
							<a href="{{ path(entry.route) }}" class="block my-5 py-2 pr-4 pl-3 transition-all rounded-lg hover:bg-emerald-500 hover:bg-opacity-20">{{entry.name}}</a>
						</li>
					{% endif %}
				{% endfor %}
				{% if is_granted('ROLE_ALLOWED_TO_SWITCH') %}
					<li>
						<a href="?_switch_user=user@email.com" class="block my-5 py-2 pr-4 pl-3 transition-all rounded-lg border-red-600 border-2 hover:bg-red-600 hover:text-white">Switch</a>
					</li>
				{% endif %}
			</ul>
		</div>
	</div>
</nav>
