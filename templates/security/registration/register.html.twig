{% extends 'security/base.html.twig' %}
{% form_theme registrationForm 'theme/form_theme.html.twig' %}

{% block title %}
	Badger Inscription
{% endblock %}

{% block main %}
	{% for flashError in app.flashes('verify_email_error') %}
		<div class="alert alert-danger" role="alert">{{ flashError }}</div>
	{% endfor %}

	<h1 class="text-center text-xl">Inscription</h1>

	{{ form_start(registrationForm) }}
	{{ form_row(registrationForm.name) }}
	{{ form_row(registrationForm.email) }}
	{{ form_row(registrationForm.plainPassword)}}

	<a href="{{app.request.query.get('referrer')}}" class="Button Button-primary-outline">Annuler</a>
	<button type="submit" class="Button Button-primary">S'inscrire</button>
	{{ form_end(registrationForm) }}
{% endblock %}
